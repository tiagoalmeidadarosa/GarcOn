<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarcOn.Pages.ConfigurationPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="IP/PORTA DO SERVIDOR:" 
                   Style="{StaticResource LabelMenu}"
                   FontSize="20"
                   TextColor="Black"/>
            <Entry x:Name="txtIP" 
                   IsEnabled="False"
                   TextColor="Black"
                   FontSize="30" />
            <Label Text="NÚMERO DA MESA:" 
                   Style="{StaticResource LabelMenu}"
                   FontSize="20"
                   TextColor="Black"/>
            <Entry x:Name="txtNumeroMesa" 
                   IsEnabled="False"
                   TextColor="Black"
                   FontSize="30" />
            <Button x:Name="btnAtualizacoes"
                    AbsoluteLayout.LayoutBounds=".5, 1, AutoSize, AutoSize" 
                    WidthRequest="300"
                    AbsoluteLayout.LayoutFlags="PositionProportional"
                    HorizontalOptions="Center"
                    Command="{Binding AddToBasket}"
                    VerticalOptions="EndAndExpand"
                    Margin="0, 0, 0, 10"
                    Text="Salvar e Buscar Atualizações"
                    IsEnabled="False"
                    Clicked="OnSaveAndGetUpdate"/>
            <ActivityIndicator x:Name="actInd"
                             IsRunning="{Binding IsLoading}"
                             IsVisible="{Binding IsLoading}" Color="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>